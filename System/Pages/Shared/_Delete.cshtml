
@{
    ViewData["SubTitle"] = Model?.GetType()?.Name?.Replace("Page", string.Empty) ?? "Unspecified";
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
    var itemId = Model?.ItemId?? string.Empty;  
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@ViewData["SubTitle"]</h4>
    <hr />

    @RenderBody()
    
    <form method="post" 
        asp-route-id="@itemId"
        asp-route-handler="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        
        <a style="text-decoration:none;"  
           asp-page="/Events/Index" 
           asp-page-handler="Index">Back to List</a>
    </form>
</div>
